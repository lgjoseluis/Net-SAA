@model UsersApplication.ViewModels.UserClaimsViewModel

@{
    ViewData["Title"] = "Permisos (Claims)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="@Model.UserId" />

    <div class="card">
        <div class="card-header">
            <h3>Asignar permisos (Claims)</h3>
        </div>

        <div class="card-body">
            @for (int i=0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-3">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType"/>
                    <input asp-for="@Model.Claims[i].Selected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model.Claims[i].Selected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }

            <div class="text-danger" asp-validation-summary="All"></div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success w-50">
                Asignar permisos
            </button>
        </div>
    </div>
</form>